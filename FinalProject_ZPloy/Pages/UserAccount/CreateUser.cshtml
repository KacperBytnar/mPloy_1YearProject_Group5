@page
@model FinalProject_ZPloy.Pages.UserAccount.CreateUserModel
@{ }


<style>

    .form-control{
        width: 31.5%;

    }

    .Hname {
        margin-bottom: 20px;
        font-family: 'wire one', serif;
        font-size: 60px;
        padding-top: 120px;
        padding-left: 50px;
    }


    label {
       
        text-align: left;
        clear: both;
        float: left;
        margin-right: 15px;
        width:135px;
    }

</style>


<div class="container">

    <h2 style="padding-left:0" class="Hname">Create Account</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.registerModel.Username" class="control-label">Username: </label>
            <input asp-for="@Model.registerModel.Username" class="form-control" />
            <span asp-validation-for="@Model.registerModel.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.registerModel.Password" class="control-label">Password: </label>
            <input type="password" asp-for="@Model.registerModel.Password" class="form-control" />
            <span asp-validation-for="@Model.registerModel.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.registerModel.ConfirmPassword" class="control-label">Confirm Password: </label>
            <input type="password" asp-for="@Model.registerModel.ConfirmPassword" class="form-control" />
        </div>
        <h3 style="margin-bottom:20px; text-align:center; color: red; font-family:sans-serif " Comic Sans MS";> @Model.registerMessage</h3>
        <div class="form-group" style="margin-top:40px; margin-left:-10px">
            <input type="submit" value="Create Account" class="btn rounded-pill" style="background-color: rgb(163 160 130)" />
        </div>
    </form>
</div>
