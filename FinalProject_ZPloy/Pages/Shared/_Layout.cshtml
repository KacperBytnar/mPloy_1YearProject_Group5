@using FinalProject_ZPloy.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> signInManager

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalProject_ZPloy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href='https://fonts.googleapis.com/css?family=Wire+One|Raleway:300' rel='stylesheet' type='text/css'>


    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        nav {
            display: flex;
            height: 80px;
            width: 100%;
            background-color: rgb(177 151 94 / 55%);
            align-items: center;
            justify-content: space-between;
            padding: 0 50px 0 100px;
            flex-wrap: wrap;
        }


            nav .ourlogo {
                color: #fff;
                font-size: 35px;
                font-weight: 600;
                margin-left: -40px;
                margin-top: 0px;
            }

            nav ul {
                display: flex;
                flex-wrap: wrap;
                list-style: none;
            }

                nav ul li {
                    margin: 0 5px;
                    padding-top: 15px;
                    margin-top: 0px;
                }

                    nav ul li a {
                        color: #f2f2f2;
                        padding: 8px 15px;
                        border-radius: 5px;
                        letter-spacing: 1px;
                        text-decoration: none;
                        font-size: 18px;
                        font-weight: 500;
                        transition: all 0.3s ease;
                    }

                        nav ul li a.active,
                        nav ul li a:hover {
                            color: #111;
                            background: rgb(229 222 189);
                        }

        body {
            margin: 0 0 44px 0 !important;
            padding: 0 !important;
            background-color: rgb(249 246 239)
        }
    </style>

</head>

<body>



    <section style="min-height: 100vh;">

        <nav style="margin:0;">

            <div class="ourlogo">
                JobStance

                <a style="background-color: rgb(163 160 130); margin-left:40px" class="btn rounded-pill" asp-page="/Tasks/CreateTask">Create Task</a>

            </div>

            <ul>

                <li class="nav-item"><a class="nav-link text-dark" asp-page="/Tasks/GetAllTasks">See Tasks</a></li>

                @if (signInManager.IsSignedIn(User))
                {
                    <li>
                         <form class="form-inline">
                            <a style="color:unset; font-size:unset; font-weight:unset; margin-right:-20px" asp-page="/UserAccount/DisplayUser"> Hello @User.Identity.Name</a>
                        </form>
                    </li>

                    <li>
                        <form class="form-inline" asp-page="/UserAccount/LogOut" method="post">
                            <button type="submit" class="nav-link btn btn-lnk text-dark">  Logout  </button>
                        </form>
                    </li>
 }

                 else
                 {
                    <li class="nav-item float-right">
                        <form class="form-inline">
                            <a class="nav-link text-dark" asp-area="" asp-page="/UserAccount/CreateUser">Create Account</a>
                    </form>
                    </li>


                    <li class="nav-item float-right">
                        <form class="form-inline">
                            <a class="nav-link text-dark" asp-area="" asp-page="/UserAccount/AccountLogin">Log In</a>
                        </form>
                    </li>
}


            </ul>

        </nav>

        <div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </section>

    <footer style="display: flex;  background-color: rgb(177 151 94 / 55%);" class="border-top footer text-muted">
        <div style=" margin-left: 20px;">
            &copy; 2022 - FinalProject_ZPloy - <a style="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)


</body>
</html>






